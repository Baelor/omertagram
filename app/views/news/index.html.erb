<div class="page-header">
  <%= link_to new_news_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New News
  <% end %>
  <h1>Listing news</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Text</th>
        <th>Posted at</th>
        <th>News source</th>
        <th>News source Reference</th>
        <th>Created by</th>
        <th>Updated by</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @news) do |news| %>
        <td><%= news.text %></td>
        <td><%= news.posted_at %></td>
        <td><%= news.news_source %></td>
        <td><%= news.news_source_reference %></td>
        <td><%= news.created_by %></td>
        <td><%= news.updated_by %></td>
        <td><%= link_to 'Show', news %></td>
        <td><%= link_to 'Edit', edit_news_path(news) %></td>
        <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
